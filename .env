# Academic Notebook Cloud Platform - Environment Configuration

# =============================================================================
# AWS Configuration
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_ACCOUNT_ID=123456789012

# =============================================================================
# Application Environment
# =============================================================================
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# =============================================================================
# Security Configuration
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
SESSION_SECRET=your-session-secret-key
DB_ENCRYPTION_KEY=your-database-encryption-key

# =============================================================================
# AWS S3 Configuration
# =============================================================================
S3_BUCKET_NAME=academic-notebooks-storage-dev
S3_REGION=us-east-1

# =============================================================================
# DynamoDB Configuration
# =============================================================================
DYNAMODB_NOTEBOOKS_TABLE=AcademicNotebooks
DYNAMODB_USERS_TABLE=AcademicUsers
DYNAMODB_VERSIONS_TABLE=NotebookVersions
DYNAMODB_COLLABORATIONS_TABLE=NotebookCollaborations

# =============================================================================
# AWS Cognito Configuration
# =============================================================================
COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
COGNITO_CLIENT_ID=your-cognito-app-client-id
COGNITO_REGION=us-east-1

# =============================================================================
# OpenSearch Configuration
# =============================================================================
OPENSEARCH_DOMAIN_ENDPOINT=https://search-academic-notebooks-xxx.us-east-1.es.amazonaws.com
OPENSEARCH_INDEX_NAME=academic-notebooks

# =============================================================================
# Lambda Configuration
# =============================================================================
BACKUP_LAMBDA_FUNCTION_NAME=academic-notebook-backup
SEARCH_INDEX_LAMBDA_FUNCTION_NAME=academic-notebook-search-index

# =============================================================================
# Redis Configuration (for local development)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=academic-redis-password

# =============================================================================
# Frontend Environment Variables (NEXT_PUBLIC_*)
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:5000/api
NEXT_PUBLIC_WS_URL=ws://localhost:5000
NEXT_PUBLIC_COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
NEXT_PUBLIC_COGNITO_CLIENT_ID=your-cognito-app-client-id
NEXT_PUBLIC_AWS_REGION=us-east-1

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_AI_SEARCH=true
ENABLE_VERSION_CONTROL=true
ENABLE_ANALYTICS=true
ENABLE_GRADING=true
